    let svg, g, zoom, simulation;
    let figureActuelle = null;
    let favoris = [];

    function sauvegarderDonnees() {
        localStorage.setItem('donnees_slalom', JSON.stringify(donnees_slalom));
        localStorage.setItem('favoris', JSON.stringify(favoris));
    }

    function chargerDonnees() {
        const donneesSauvegardees = localStorage.getItem('donnees_slalom');
        if (donneesSauvegardees) {
            donnees_slalom = JSON.parse(donneesSauvegardees);
        }
        const favorisSauvegardes = localStorage.getItem('favoris');
        if (favorisSauvegardes) {
            favoris = JSON.parse(favorisSauvegardes);
        }
    }

    function placementCirculaire(index, total, rayon) {
        const angle = (index / total) * 2 * Math.PI;
        const padding = 30;
        return {
            x: (rayon + padding) * Math.cos(angle),
            y: (rayon + padding) * Math.sin(angle)
        };
    }

    function creerVisualisation() {
        chargerDonnees();
        const container = document.getElementById('visualisation');
        const largeur = container.clientWidth;
        const hauteur = container.clientHeight;

        d3.select("#visualisation").select("svg").remove();
        svg = d3.select("#visualisation")
            .append("svg")
            .attr("width", largeur)
            .attr("height", hauteur);

        g = svg.append("g");

        zoom = d3.zoom()
            .scaleExtent([0.1, 10])
            .on("zoom", (event) => {
                g.transition()
                    .duration(50)
                    .ease(d3.easeLinear)
                    .attr("transform", event.transform);
            });

        svg.call(zoom);

        const rayonBase = Math.min(largeur, hauteur) / 3  ;
        const echelleRayon = d3.scaleLinear()
            .domain([d3.min(donnees_slalom, d => d.figures.length), d3.max(donnees_slalom, d => d.figures.length)])
            .range([rayonBase * 0.6, rayonBase]);

        const padding = 100;

        simulation = d3.forceSimulation(donnees_slalom)
            .force("center", d3.forceCenter(largeur / 2, hauteur / 2))
            .force("collision", d3.forceCollide().radius(d => echelleRayon(d.figures.length) * 6))
            .force("charge", d3.forceManyBody().strength(-100))
            .force("x", d3.forceX(largeur / 2).strength(0.2))
            .force("y", d3.forceY(hauteur / 2).strength(0.2))
            .force("boundary", () => {
                for (let node of donnees_slalom) {
                    node.x = Math.max(padding, Math.min(largeur - padding, node.x));
                    node.y = Math.max(padding, Math.min(hauteur - padding, node.y));
                }
            });

        simulation.alphaDecay(0.03);
        simulation.velocityDecay(0.6);

        const groupeNiveau = g.selectAll("g.niveau")
            .data(donnees_slalom)
            .enter().append("g")
            .attr("class", "niveau");

        groupeNiveau.append("circle")
            .attr("r", d => echelleRayon(d.figures.length))
            .attr("fill", d => d.couleur)
            .attr("stroke", "#ffffff")
            .attr("stroke-width", 2)
            .on("click", function(event, d) {
                d3.select(this.parentNode).transition().duration(300).style("opacity", 0).remove();
                simulation.nodes(simulation.nodes().filter(node => node !== d));
                simulation.alpha(1).restart();
            });

        groupeNiveau.append("text")
            .attr("class", "texte-niveau")
            .text(d => `Niveau ${d.niveau}`);

        groupeNiveau.each(function(d) {
            const sousGroupe = d3.select(this);
            const rayon = echelleRayon(d.figures.length) + 60;

            d.figures.forEach((figure, index) => {
                const {x, y} = placementCirculaire(index, d.figures.length, rayon);
                
                const groupeFigure = sousGroupe.append("g")
                    .attr("class", "groupe-figure")
                    .attr("transform", `translate(${x},${y})`)
                    .on("click", (event) => {
                        event.stopPropagation();
                        afficherPopup(figure);
                    })
                    .on("mouseover", function() {
                        d3.select(this).select("rect")
                            .transition()
                            .duration(300)
                            .attr("width", 100)
                            .attr("height", 40)
                            .attr("x", -50)
                            .attr("y", -20);
                        d3.select(this).select("text")
                            .transition()
                            .duration(300)
                            .style("font-size", "14px");
                    })
                    .on("mouseout", function() {
                        d3.select(this).select("rect")
                            .transition()
                            .duration(300)
                            .attr("width", 90)
                            .attr("height", 30)
                            .attr("x", -45)
                            .attr("y", -15);
                        d3.select(this).select("text")
                            .transition()
                            .duration(300)
                            .style("font-size", "12px");
                    });

                groupeFigure.append("rect")
                    .attr("class", `fond-figure ${figure.statut}`)
                    .attr("x", -45)
                    .attr("y", -15)
                    .attr("width", 90)
                    .attr("height", 30)
                    .attr("rx", 5)
                    .attr("ry", 5);

                groupeFigure.append("text")
                    .attr("class", "texte-figure")
                    .text(figure.nom.length > 12 ? figure.nom.slice(0, 9) + "..." : figure.nom);
            });
        });

        simulation.on("tick", () => {
            groupeNiveau.transition()
                .duration(50)
                .ease(d3.easeLinear)
                .attr("transform", d => `translate(${d.x},${d.y})`);
        });

        groupeNiveau.call(d3.drag()
            .on("start", e => { if (!e.active) simulation.alphaTarget(0.3).restart(); e.subject.fx = e.subject.x; e.subject.fy = e.subject.y; })
            .on("drag", e => { e.subject.fx = e.x; e.subject.fy = e.y; })
            .on("end", e => { if (!e.active) simulation.alphaTarget(0); e.subject.fx = null; e.subject.fy = null; }));

        groupeNiveau.on("mouseover", function() {
            d3.select(this).transition()
                .duration(300)
                .attr("transform", d => `translate(${d.x},${d.y}) scale(1.1)`);
        })
        .on("mouseout", function() {
            d3.select(this).transition()
                .duration(300)
                .attr("transform", d => `translate(${d.x},${d.y}) scale(1)`);
        });

        creerFiltres();
        mettreAJourProgressions();
        creerNavigationNiveaux();
        mettreAJourFavoris();
    }

    function creerFiltres() {
        const conteneurFiltres = d3.select("#filtres").html("");

        conteneurFiltres.append("h3").text("Niveaux");
        donnees_slalom.forEach(niveau => {
            const label = conteneurFiltres.append("label")
                .style("display", "block")
                .style("margin-bottom", "5px");
            label.append("input")
                .attr("type", "checkbox")
                .attr("checked", true)
                .on("change", function() {
                    const estCoche = d3.select(this).property("checked");
                    g.selectAll("g.niveau").filter(d => d.niveau === niveau.niveau)
                        .style("display", estCoche ? null : "none");
                    simulation.alpha(1).restart();
                });
            label.append("span")
                .text(` Niveau ${niveau.niveau}`)
                .style("color", niveau.couleur);
        });

        conteneurFiltres.append("h3").text("Statut");
        ["maitrisee", "en-cours", "a-apprendre"].forEach(statut => {
            const label = conteneurFiltres.append("label")
                .style("display", "block")
                .style("margin-bottom", "5px");
            label.append("input")
                .attr("type", "checkbox")
                .attr("checked", true)
                .on("change", function() {
                    const estCoche = d3.select(this).property("checked");
                    g.selectAll(".groupe-figure")
                        .style("display", function(d) {
                            const figure = d3.select(this).datum();
                            return estCoche || figure.statut !== statut ? null : "none";
                        });
                });
            label.append("span").text(` ${statut.charAt(0).toUpperCase() + statut.slice(1)}`);
        });

        conteneurFiltres.append("h3").text("Tags");
        const tousLesTags = [...new Set(donnees_slalom.flatMap(niveau => niveau.figures.flatMap(figure => figure.tags)))];
        tousLesTags.forEach(tag => {
            const label = conteneurFiltres.append("label")
                .style("display", "block")
                .style("margin-bottom", "5px");
            label.append("input")
                .attr("type", "checkbox")
                .attr("checked", true)
                .on("change", function() {
                    const estCoche = d3.select(this).property("checked");
                    g.selectAll(".groupe-figure")
                        .style("display", function(d) {
                            const figure = d3.select(this).datum();
                            return estCoche || !figure.tags.includes(tag) ? null : "none";
                        });
                });
            label.append("span").text(` ${tag}`);
        });

        conteneurFiltres.append("button")
            .text("R√©initialiser les filtres")
            .style("margin-top", "10px")
            .on("click", function() {
                conteneurFiltres.selectAll("input[type='checkbox']").property("checked", true);
                g.selectAll("g.niveau, .groupe-figure").style("display", null);
                simulation.alpha(1).restart();
            });
    }

    function afficherPopup(figure) {
        figureActuelle = figure;
        const popup = document.getElementById('popup');
        document.getElementById('popup-titre').textContent = figure.nom;
        document.getElementById('popup-description').textContent = figure.description;
        document.getElementById('popup-tags').textContent = "Tags: " + figure.tags.join(", ");
        
        const videoContainer = document.getElementById('video-container');
        if (figure.videoUrl) {
            videoContainer.innerHTML = `<iframe width="100%" height="315" src="${figure.videoUrl}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
            videoContainer.style.display = 'block';
        } else {
            videoContainer.style.display = 'none';
        }
        
        const toggleFavorisBtn = document.getElementById('toggle-favoris');
        toggleFavorisBtn.textContent = favoris.includes(figure.nom) ? "Retirer des favoris" : "Ajouter aux favoris";
        
        popup.style.display = 'block';
    }

    function fermerPopup() {
        document.getElementById('popup').style.display = 'none';
        figureActuelle = null;
    }

    function changerStatut(statut) {
        if (figureActuelle) {
            figureActuelle.statut = statut;
            d3.selectAll(".groupe-figure")
                .filter(d => d === figureActuelle)
                .select(".fond-figure")
                .transition()
                .duration(300)
                .attr("class", `fond-figure ${statut}`);
            fermerPopup();
            mettreAJourProgressions();
            sauvegarderDonnees();
        }
    }

    function mettreAJourProgressions() {
        const containerDetails = document.getElementById('progression-details');
        containerDetails.innerHTML = '';
        
        let totalFigures = 0;
        let totalMaitrisees = 0;

        donnees_slalom.forEach(niveau => {
            const totalNiveau = niveau.figures.length;
const maitriseesNiveau = niveau.figures.filter(f => f.statut === 'maitrisee').length;
            totalFigures += totalNiveau;
            totalMaitrisees += maitriseesNiveau;

            const pourcentage = (maitriseesNiveau / totalNiveau) * 100;
            const progressNiveau = document.createElement('div');
            progressNiveau.className = 'progression-niveau';
            progressNiveau.innerHTML = `
                <span>Niveau ${niveau.niveau} :</span>
                <div class="progress-bar">
                    <div class="progress-bar-fill" style="width: ${pourcentage}%; background-color: ${niveau.couleur};"></div>
                </div>
                <span>${pourcentage.toFixed(1)}%</span>
            `;
            containerDetails.appendChild(progressNiveau);
        });

        const pourcentageGlobal = (totalMaitrisees / totalFigures) * 100;
        document.getElementById('progression-globale-pourcentage').textContent = `${pourcentageGlobal.toFixed(1)}%`;
        document.getElementById('progression-globale-barre').style.width = `${pourcentageGlobal}%`;
    }

    function rechercherFigure() {
        const searchTerm = document.getElementById('search-input').value.toLowerCase();
        let figuresTrouvees = [];

        donnees_slalom.forEach(niveau => {
            niveau.figures.forEach(figure => {
                if (figure.nom.toLowerCase().includes(searchTerm)) {
                    figuresTrouvees.push(figure);
                }
            });
        });

        if (figuresTrouvees.length > 0) {
            afficherPopup(figuresTrouvees[0]);
        } else {
            alert("Aucune figure trouv√©e avec ce nom.");
        }
    }

    function creerNavigationNiveaux() {
        const select = document.getElementById('niveau-select');
        select.innerHTML = '';
        donnees_slalom.forEach(niveau => {
            const option = document.createElement('option');
            option.value = niveau.niveau;
            option.textContent = `Niveau ${niveau.niveau}`;
            select.appendChild(option);
        });
        select.addEventListener('change', (e) => {
            const niveauSelectionne = parseInt(e.target.value);
            const noeudNiveau = donnees_slalom.find(n => n.niveau === niveauSelectionne);
            if (noeudNiveau) {
                const transform = d3.zoomIdentity.translate(
                    svg.attr("width") / 2 - noeudNiveau.x,
                    svg.attr("height") / 2 - noeudNiveau.y
                ).scale(1.5);
                svg.transition().duration(750).call(zoom.transform, transform);
            }
        });
    }

    function toggleFavoris() {
        if (figureActuelle) {
            const index = favoris.indexOf(figureActuelle.nom);
            if (index > -1) {
                favoris.splice(index, 1);
            } else {
                favoris.push(figureActuelle.nom);
            }
            sauvegarderDonnees();
            mettreAJourFavoris();
            const toggleFavorisBtn = document.getElementById('toggle-favoris');
            toggleFavorisBtn.textContent = favoris.includes(figureActuelle.nom) ? "Retirer des favoris" : "Ajouter aux favoris";
        }
    }

    function mettreAJourFavoris() {
        const favorisContainer = document.getElementById('favoris-container');
        const favorisList = document.getElementById('favoris-list');
        favorisList.innerHTML = '';
        favoris.forEach(nomFigure => {
            const item = document.createElement('div');
            item.className = 'favoris-item';
            item.textContent = nomFigure;
            item.addEventListener('click', () => {
                const figure = trouverFigureParNom(nomFigure);
                if (figure) {
                    afficherPopup(figure);
                }
            });
            favorisList.appendChild(item);
        });
        favorisContainer.style.display = favoris.length > 0 ? 'block' : 'none';
    }

    function trouverFigureParNom(nom) {
        for (const niveau of donnees_slalom) {
            for (const figure of niveau.figures) {
                if (figure.nom === nom) {
                    return figure;
                }
            }
        }
        return null;
    }

    function suggererFigures(terme) {
        const suggestions = [];
        donnees_slalom.forEach(niveau => {
            niveau.figures.forEach(figure => {
                if (figure.nom.toLowerCase().includes(terme.toLowerCase())) {
                    suggestions.push(figure.nom);
                }
            });
        });
        return suggestions.slice(0, 5);
    }

    document.getElementById('filtres-burger').addEventListener('click', function() {
        const filtres = document.getElementById('filtres');
        filtres.style.display = filtres.style.display === 'none' ? 'block' : 'none';
    });

    document.getElementById('progression-burger').addEventListener('click', function() {
        const progression = document.getElementById('progression-container');
        progression.style.display = progression.style.display === 'none' ? 'block' : 'none';
    });

    document.getElementById('search-button').addEventListener('click', rechercherFigure);

    document.getElementById('search-input').addEventListener('input', function(e) {
        const suggestions = suggererFigures(e.target.value);
        const suggestionsContainer = document.getElementById('suggestions');
        suggestionsContainer.innerHTML = '';
        if (suggestions.length > 0) {
            suggestions.forEach(suggestion => {
                const item = document.createElement('div');
                item.className = 'suggestion-item';
                item.textContent = suggestion;
                item.addEventListener('click', () => {
                    document.getElementById('search-input').value = suggestion;
                    suggestionsContainer.style.display = 'none';
                    rechercherFigure();
                });
                suggestionsContainer.appendChild(item);
            });
            suggestionsContainer.style.display = 'block';
        } else {
            suggestionsContainer.style.display = 'none';
        }
    });

    document.getElementById('search-input').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            rechercherFigure();
        }
    });

    document.getElementById('zoom-in').addEventListener('click', () => {
        svg.transition().duration(300).call(zoom.scaleBy, 1.5);
    });

    document.getElementById('zoom-out').addEventListener('click', () => {
        svg.transition().duration(300).call(zoom.scaleBy, 0.75);
    });

    document.getElementById('zoom-reset').addEventListener('click', () => {
        svg.transition().duration(300).call(zoom.transform, d3.zoomIdentity);
    });

    document.getElementById('toggle-favoris').addEventListener('click', toggleFavoris);

    window.addEventListener('resize', () => {
        const container = document.getElementById('visualisation');
        svg.attr("width", container.clientWidth)
           .attr("height", container.clientHeight);
        creerVisualisation();
    });

    window.addEventListener('load', () => {
        creerVisualisation();
    });
    </script>
</body>
</html>
